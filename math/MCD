<HTML>
<SCRIPT LANGUAGE="JavaScript"> 
// Maximo comun divisor de un numero
var x,y,aux,resto; 
x=prompt("Escribe un número",""); 
x=parseInt(x,10); 
y=prompt("Escribe el otro número",""); 
y=parseInt(y,10); 
   if (x<y) 
     { 
         aux=x; 
         x=y; 
        y=aux; 
      } 
   if ((x % y)==0) resto=y;
      while ((x % y) != 0) 
        { 
          resto=x%y; 
          x=y; 
          y=resto; 
        } 
alert("El MCD es "+resto); 
</SCRIPT> 
